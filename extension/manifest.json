{
  "manifest_version": 3,
  "name": "QuickRewrite",
  "version": "0.1.0",
  "description": "Select text and rewrite it (formal, humorous, concise) using Gemini.",
  "permissions": ["contextMenus", "scripting", "activeTab"],
  "host_permissions": ["http://localhost:3000/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "css": ["contentStyle.css"],
      "run_at": "document_idle"
    }
  ]
}
